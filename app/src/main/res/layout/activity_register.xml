<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.fubaihui.activity.RegisterActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/register_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/register_return"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_25"
                    android:src="@drawable/em_mm_title_back"
                    android:layout_height="@dimen/dp_25" />
                <TextView
                    android:layout_width="wrap_content"
                    android:text="返回"
                    android:layout_marginTop="@dimen/dp_2"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/gray"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:text="注册"
                android:textSize="@dimen/sp_18"
                android:layout_gravity="center"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.Toolbar>
        <TextView
            android:layout_width="match_parent"
            android:background="@color/cut_line"
            android:layout_height="@dimen/dp_2"/>

        <com.example.lenovo.fubaihui.design.SmsVerifyView
            android:id="@+id/smsVerifyView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </com.example.lenovo.fubaihui.design.SmsVerifyView>
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
