<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lenovo.fubaihui.dataactivity.NumberActivity">

    <include layout="@layout/item_tool"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="请输入新手机号："
            android:textSize="@dimen/sp_18"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/number_phon"
            android:layout_width="match_parent"
            android:background="@null"
            android:layout_height="@dimen/dp_30" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/gray"
        android:layout_height="@dimen/dp_1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/number_huocode"
            android:layout_width="@dimen/dp_230"
            android:hint="请输入验证码"
            android:textSize="@dimen/sp_18"
            android:background="@null"
            android:layout_marginBottom="@dimen/dp_1"
            android:layout_height="@dimen/dp_30" />
        <TextView
            android:id="@+id/number_code"
            android:layout_width="@dimen/dp_90"
            android:text="获取验证码"
            android:gravity="center"
            android:background="@drawable/register_code"
            android:textColor="@color/green_theme"
            android:layout_height="@dimen/dp_36" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/gray"
        android:layout_height="@dimen/dp_1" />
    <Button
        android:id="@+id/number_button"
        android:layout_width="@dimen/dp_330"
        android:text="确认修改 "
        android:textColor="@color/colorWhite"
        android:layout_gravity="center"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_50"
        android:background="@drawable/sign_button"
        android:layout_height="wrap_content" />

</LinearLayout>
