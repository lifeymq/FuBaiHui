<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/dark_grey"
   android:orientation="vertical"
   tools:context="com.example.lenovo.fubaihui.fragments.MineFragment">

   <LinearLayout
      android:id="@+id/ll_mine_data"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="@dimen/dp_10"
      android:background="@drawable/rv_item_shape"
      android:orientation="horizontal">

      <ImageView
         android:id="@+id/iv_mine_image"
         android:layout_width="@dimen/dp_60"
         android:layout_height="@dimen/dp_60"
         android:layout_margin="@dimen/dp_10" />

      <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/dp_10"
         android:layout_weight="1"
         android:orientation="vertical">

         <TextView
            android:id="@+id/tv_mine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_13"
            android:text="1111111" />

         <TextView
            android:id="@+id/tv_mine_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="1111111" />
      </LinearLayout>

      <ImageView

         android:layout_width="@dimen/dp_20"
         android:layout_height="match_parent"
         android:layout_marginRight="@dimen/dp_5"
         android:src="@drawable/ic_arrow_right" />
   </LinearLayout>

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_320"
      android:layout_marginLeft="@dimen/dp_10"
      android:layout_marginRight="@dimen/dp_10"
      android:background="@drawable/rv_item_shape"
      android:orientation="vertical">

      <LinearLayout
         android:id="@+id/ll_mine_discount"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="@dimen/dp_5"
         android:orientation="horizontal">

         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_my_page_mid_coupon" />

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:text="优惠券"
            android:textSize="@dimen/sp_15" />

         <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_right" />

      </LinearLayout>

      <LinearLayout
         android:id="@+id/ll_mine_setting"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="@dimen/dp_5"
         android:orientation="horizontal">

         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_my_page_mid_setting" />

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:text="设    置"
            android:textSize="@dimen/sp_15" />

         <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_right" />

      </LinearLayout>

      <LinearLayout
         android:id="@+id/ll_mine_recommend"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="@dimen/dp_5"
         android:orientation="horizontal">

         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_my_page_mid_recommend" />

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:text="推    荐"
            android:textSize="@dimen/sp_15" />

         <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_right" />

      </LinearLayout>

      <LinearLayout
         android:id="@+id/ll_mine_recommend_num"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="@dimen/dp_5"
         android:orientation="horizontal">

         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_my_page_mid_referral_code" />

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:text="推荐码"
            android:textSize="@dimen/sp_15" />

         <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_right" />

      </LinearLayout>

      <LinearLayout
         android:id="@+id/ll_mine_address"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="@dimen/dp_5"
         android:orientation="horizontal">

         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/location" />

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:text="收货地址"
            android:textSize="@dimen/sp_15" />

         <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_right" />

      </LinearLayout>

      <LinearLayout
         android:id="@+id/ll_mine_settled_in"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="@dimen/dp_5"
         android:orientation="horizontal">

         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/recruitment" />

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:text="商家入驻"
            android:textSize="@dimen/sp_15" />

         <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_right" />

      </LinearLayout>

      <LinearLayout
         android:id="@+id/ll_mine_login"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="@dimen/dp_5"
         android:orientation="horizontal">

         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/recruitment" />

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:text="商家登录"
            android:textSize="@dimen/sp_15" />

         <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_right" />

      </LinearLayout>

      <LinearLayout
         android:id="@+id/ll_mine_phone"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="@dimen/dp_5"
         android:orientation="horizontal">

         <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/platform_hotline" />

         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_weight="1"
            android:text="平台电话"
            android:textSize="@dimen/sp_15" />

         <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="match_parent"
            android:src="@drawable/ic_arrow_right" />
      </LinearLayout>
   </LinearLayout>


   <LinearLayout

      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/dp_10"
      android:layout_marginTop="@dimen/dp_20"
      android:layout_marginRight="@dimen/dp_10"
      android:background="@drawable/rv_item_shape"
      android:orientation="horizontal">

      <TextView
         android:id="@+id/ll_mine_friend"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/dp_5"
         android:layout_weight="1"
         android:drawableTop="@drawable/home_my_page_bottom_my_friends"
         android:gravity="center"
         android:text="我的好友" />

      <TextView
         android:id="@+id/ll_mine_collection"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/dp_5"
         android:layout_weight="1"
         android:drawableTop="@drawable/home_my_page_bottom_my_collection"
         android:gravity="center"
         android:text="我的收藏" />

      <TextView
         android:id="@+id/ll_mine_wallet"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/dp_5"
         android:layout_weight="1"
         android:drawableTop="@drawable/home_my_page_bottom_my_money_packge"
         android:gravity="center"
         android:text="我的钱包" />

      <TextView
         android:id="@+id/ll_mine_order"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/dp_5"
         android:layout_weight="1"
         android:drawableTop="@drawable/home_my_page_bottom_my_cargo"
         android:gravity="center"
         android:text="我的订单" />
   </LinearLayout>

</LinearLayout>
