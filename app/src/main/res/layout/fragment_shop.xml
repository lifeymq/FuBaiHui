<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lenovo.fubaihui.fragments.ShopFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:background="#11CC11"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp">
        <TextView android:id="@+id/select_all"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="#FFF"
            android:text="全选"
            android:layout_height="wrap_content" />
        <RadioGroup android:id="@+id/radg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="@dimen/dp_260"
            android:layout_height="@dimen/dp_30">
            <RadioButton android:id="@+id/rad1"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:gravity="center"
                android:checked="true"
                android:button="@null"
                android:textSize="17sp"
                android:background="@drawable/isrela"
                android:text="福百慧商城"
                android:textColor="@color/radiobutton_textcolor"
                android:layout_height="match_parent" />
            <RadioButton android:id="@+id/rad2"
                android:layout_width="@dimen/dp_0"
                android:button="@null"
                android:gravity="center"
                android:text="银积分商城"
                android:textSize="17sp"
                android:layout_weight="1"
                android:textColor="@color/radiobutton_textcolor"
                android:background="@drawable/isrela"
                android:layout_height="match_parent" />
            <RadioButton android:id="@+id/rad3"
                android:layout_width="@dimen/dp_0"
                android:layout_weight="1"
                android:button="@null"
                android:text="加盟商家"
                android:textSize="17sp"
                android:gravity="center"
                android:textColor="@color/radiobutton_textcolor"
                android:background="@drawable/isrela"
                android:layout_height="match_parent" />
        </RadioGroup>
        <TextView android:id="@+id/edit_text"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:layout_marginRight="@dimen/dp_8"
            android:textColor="#FFF"
            android:text="编辑"
            android:layout_height="wrap_content" />
      </RelativeLayout>
      <RelativeLayout android:id="@+id/rela"
          android:visibility="visible"
          android:layout_width="match_parent"
          android:layout_weight="10"
          android:layout_height="0dp">
          <ImageView android:id="@+id/gouwucheimg"
              android:layout_centerInParent="true"
              android:src="@drawable/gouwuche"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView android:id="@+id/txt"
              android:layout_margin="5dp"
              android:textSize="17sp"
              android:layout_centerInParent="true"
              android:layout_below="@id/gouwucheimg"
              android:text="购物车里还没有商品"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView
              android:layout_margin="5dp"
              android:textSize="17sp"
              android:layout_centerInParent="true"
              android:layout_below="@id/txt"
              android:text="快去逛逛吧"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
      </RelativeLayout>
<android.support.v7.widget.RecyclerView android:id="@+id/shop_re"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_weight="10"
    android:layout_height="0dp"></android.support.v7.widget.RecyclerView>
      <RelativeLayout android:id="@+id/button1"
          android:layout_width="match_parent"
          android:layout_weight="1"
          android:layout_height="0dp">
          <TextView android:id="@+id/heji"
              android:layout_centerVertical="true"
              android:layout_toLeftOf="@id/jin"
              android:text="合计："
              android:textSize="17sp"
              android:layout_marginRight="10dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView android:id="@+id/jin"
              android:textColor="#FF0000"
              android:layout_centerVertical="true"
              android:layout_toLeftOf="@id/Settlement"
              android:text="￥0.0"
              android:textSize="17sp"
              android:layout_marginRight="@dimen/dp_25"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <TextView android:id="@+id/Settlement"
              android:layout_alignParentRight="true"
              android:text="结算"
              android:layout_centerVertical="true"
              android:paddingTop="@dimen/dp_5"
              android:paddingBottom="@dimen/dp_5"
              android:paddingRight="@dimen/dp_15"
              android:paddingLeft="@dimen/dp_15"
              android:textColor="#FFF"
              android:layout_marginRight="10dp"
              android:textSize="17sp"
              android:background="@drawable/textshape"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
      </RelativeLayout>

    <RelativeLayout android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout_height="0dp">
        <TextView android:id="@+id/delete_shop"
            android:layout_alignParentRight="true"
            android:text="删除"
            android:layout_centerVertical="true"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"
            android:textColor="#FFF"
            android:layout_marginRight="10dp"
            android:textSize="17sp"
            android:background="#FF0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
