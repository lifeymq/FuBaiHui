<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:background="@color/dark_grey"
   android:orientation="vertical"
   tools:context="com.example.lenovo.fubaihui.activity.IntegralDetailsActivity">

   <LinearLayout
      android:id="@+id/re1"
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_40"
      android:background="#11CC11"
      android:orientation="horizontal">

      <ImageView
         android:id="@+id/fish_integral"
         android:layout_width="@dimen/dp_25"
         android:layout_height="match_parent"
         android:layout_centerVertical="true"
         android:src="@drawable/back" />

      <TextView
         android:id="@+id/details_biao"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:ellipsize="end"
         android:gravity="center"
         android:maxLines="1"
         android:text="1111111"
         android:textColor="#FFF"
         android:textSize="20sp" />
   </LinearLayout>

   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">

      <ImageView
         android:id="@+id/details_logo"
         android:layout_width="@dimen/dp_80"
         android:layout_height="@dimen/dp_80"
         android:layout_margin="@dimen/dp_10" />

      <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/dp_10"
         android:orientation="vertical">

         <TextView
            android:id="@+id/details_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/details_logo"
            android:textSize="18sp" />


         <TextView
            android:id="@+id/details_arrders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@id/details_logo"
            android:textSize="13sp" />
      </LinearLayout>
   </LinearLayout>

   <TextView
      android:layout_width="match_parent"
      android:layout_height="@dimen/dp_2"
      android:background="@color/gray" />

   <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <ImageView
         android:id="@+id/details_logo1"
         android:layout_width="@dimen/dp_50"
         android:layout_height="@dimen/dp_50"
         android:layout_margin="@dimen/dp_10"
         android:src="@drawable/icon_openmap_focuse_mark" />

      <TextView
         android:id="@+id/details_title1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="@dimen/dp_10"
         android:layout_toRightOf="@id/details_logo1"
         android:ellipsize="end"
         android:gravity="center"
         android:maxLines="1"
         android:textSize="15sp" />
   </RelativeLayout>
</LinearLayout>
