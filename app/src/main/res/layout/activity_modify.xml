<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.fubaihui.activity.ModifyActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/register_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/modify_return"
                android:layout_width="@dimen/dp_26"
                android:src="@drawable/em_mm_title_back"
                android:layout_height="@dimen/dp_26" />
            <ImageView
                android:id="@+id/modify_cuo"
                android:layout_width="@dimen/dp_26"
                android:src="@drawable/icon_close_page"
                android:layout_height="@dimen/dp_26" />
        <TextView
            android:layout_width="wrap_content"
            android:text="忘记密码"
            android:textSize="@dimen/sp_18"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        </android.support.v7.widget.Toolbar>
        <TextView
            android:layout_width="match_parent"
            android:background="@color/cut_line"
            android:layout_height="@dimen/dp_2"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="已向手机号"
                android:textSize="@dimen/sp_15"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/modify_phone"
                android:layout_width="wrap_content"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/red"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="发送短信验证码"
                android:textSize="@dimen/sp_15"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="@dimen/dp_315"
            android:orientation="vertical"
            android:background="@drawable/modify_kuang"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_height="@dimen/dp_82">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/modify_code"
                    android:layout_width="@dimen/dp_200"
                    android:hint="   请输入验证码"
                    android:textSize="@dimen/sp_16"
                    android:background="@null"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="@dimen/dp_1"
                    android:background="@color/cut_line"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_height="@dimen/dp_26"/>
                <TextView
                    android:id="@+id/modify_facode"
                    android:layout_width="wrap_content"
                    android:text="发送验证码"
                    android:textColor="@color/black_theme"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@color/cut_line"
                android:layout_height="@dimen/dp_1"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/masked_password"
                    android:layout_width="@dimen/dp_270"
                    android:hint="   设置新密码"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:layout_height="match_parent" />
                <ToggleButton
                    android:id="@+id/modify_yan"
                    android:background="@drawable/tv_read"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_4"
                    android:textOff=""
                    android:textOn=""/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_11"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="@color/gray"
            android:text="*新密码需含有小写字母、大写字母、数字、特殊符号的两种及以上"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/modify_button"
            android:layout_width="@dimen/dp_320"
            android:text="提交"
            android:textColor="@color/colorWhite"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_30"
            android:background="@drawable/modify_xuan"
            android:layout_height="wrap_content" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
